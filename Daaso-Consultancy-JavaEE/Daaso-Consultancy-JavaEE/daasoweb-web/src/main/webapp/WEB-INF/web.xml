    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>daaso-jdbc</realm-name>
        <form-login-config>
            <form-login-page>/faces/login.xhtml</form-login-page>
            <form-error-page>/faces/login.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <servlet-mapping>
        <servlet-name>GenerateGroups</servlet-name>
        <url-pattern>/install/generate-groups</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
